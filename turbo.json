{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "VSCODE_PID",
        "OPENAI_API_KEY",
        "OPENAI_API_BASE_PATH",
        "OPENAI_MODEL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "ts-check": {},
    "test": {
      "outputs": []
    },
    "watch": {
      // https://github.com/vercel/turborepo/issues/986#issuecomment-1091384632
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["VSCODE_PID"]
}
